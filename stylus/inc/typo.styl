.hr {
	height 8px
	border none
	margin 0 -15px 
}

.h1 {
	margin 0
	font-size 25px 
	font-weight 700 
	
	@media (min-width $md) {
		font-size 35px 
	}
	
	@media (min-width $lg) {
		font-size 44px 
	}
}

.h2 {
	margin 0
	font-size 30px 
	font-weight 700 
}

.h3 {
	font-size 18px 
	font-weight 700 
}

.p {
	margin-bottom 10px 
	font-size 16px 
	line-height 1.5 
}

.svg {
	fill currentColor
}

.link-more {
	position relative
	margin-right 25px 
	&:after {
		content "â–º"
		position absolute
		top 0
		right -25px
		display flex
		align-items center
		justify-content center
		width 20px
		height 20px
		border-radius 50%
		background-color #4cafdf
		color white
		font-size 12px
		padding-left 2px 
	}
}

.link {
	color inherit
	text-decoration none 
	
	&:hover,
	&:focus,
	&:active {
		color inherit
		text-decoration underline
	}
}

.unlink {
	color inherit
	text-decoration none
	
	&:hover,
	&:focus,
	&:active {
		color inherit
		text-decoration none
	}
}

.ulink {
	color inherit
	text-decoration underline
	
	&:hover,
	&:focus,
	&:active {
		color inherit
		text-decoration none
	}
}