.card-product {
	position relative
	border 1px solid #efefef
	padding 30px 
	background white
	
	
	
	&:hover:after {
		content ""
		display block
		position absolute
		top -10px
		left -10px
		right -10px
		bottom -10px 
		box-shadow: 0 0 9px 1px rgba(2, 1, 0, 0.18);
		border 10px solid #aed7ee
		z-index 10 
	}
	
	&_hover_false {
		transition outline-width 0.3s, outline-offset 0.3s
	}
	
	&_hover_false:after {
		display none !important
	}
	
	&_hover_false:hover {
		outline 10px solid #aed7ee
		outline-offset -10px
	}
	
	&__pr {
		display block
		margin 0 auto 35px
	}
	
	&__title {
		font-size 16px 
		text-align center
	}
}

.card-edge {
	text-align center
	
	&__pr {
		position relative
		display flex
		align-items center
		justify-content center
		width 143px
		height 143px
		border-radius 50%
		border 1px solid #eeeeee
		background white 
		margin 0 auto 20px
		
		&:after {
			content ""
			position absolute
			top -5px
			left -5px
			right -5px
			bottom -5px
			border-radius 50%
			border 2px solid #eeeeee
		}
	}
	
	&__title {
		margin-bottom 10px 
		font-size 18px
		line-height 20px
		color #008dd2
	}
	
	&__desc {
		font-size 14px
		color #3e3e3e
	}
}

.card-news {
	font-size 16px 
	
	&__date {
		display block
		margin-bottom 10px 
	}
	
	&__pr {
		display block
		width 100%
		height auto
		margin-bottom 10px 
	}
}