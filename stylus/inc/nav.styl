.nav-top {
	&__list {
		display flex
		list-style-type none
		padding 0
		margin 0
	}
	
	&__item {
		margin-right 20px 
		
		&:last-child {
			margin-right 0 
		}
	}
}

.nav-social {
	display flex
	align-items center
	
	&__label {
		margin-right 10px
		font-size 13px
	}
	
	&__list {
		display flex
		align-items center
		list-style-type none
		margin 0
		padding 0
	}
	
	&__item {
		margin-right 4px 
		line-height 0
		font-size 0
		color #b5b5b5
		opacity 0.8
		
		&:hover {
			opacity 1 
		}
		
		&_fb {
			color #3A559F
		}
		
		&_vk {
			color #44678D
		}
		
		&_youtube {
			color #DC472E
		}
		
		&_instagram {
			color #C536A4
		}
	}
}

.nav-main {
	z-index 10
	
	&__list {
		display flex
		list-style-type none
		padding 0
		margin 0
		position relative
	}
	
	&__item {
		&:hover,
		&.active {
			background #aed7ee 
		}
	}
	
	&__link {
		display flex
		align-items center
		height 48px
		font-size 11px 
		padding 10px 5px
		line-height 1
		vertical-align middle
		text-transform uppercase
		
		@media (min-width $lg) {
			padding 10px
			font-size 13px 
		}
		
		&_icon {
			align-items center
		}
	}
	
	&__icon {
		margin-right 12px 
	}
	
	&__sub {
		position absolute
		top 100%
		left 0
		z-index -1
	}
}

.nav-sub-main {
	display none
	list-style-type none
	width 280px
	padding 1px 0 0
	margin 0
	background white 
	color #000000
	box-shadow 0 0 12px 1px rgba(2, 1, 0, 0.19)
	
	&__trigger:hover > & {
		display block
	}
	
	&__item {
		padding 0 10px 
		position relative
		
		&:hover {
			background #d8d8d8
		}
		
		&:hover:before {
			display block
			content ""
			margin-top -1px 
			width 100%
			height 1px 
		}
	}
	
	&__item:hover > &__link:after {
		content "►"
	}
	
	&__link {
		display block
		padding 10px
		position relative
		border-bottom 1px solid #d8d8d8
		
		&:after {
			content "▼"
			font-size 80%
			position absolute
			top 15px  
			right 3px
			color #bcbcbc
		}
	}
	
	&__item:last-child &__link {
		border-bottom none
	}
	
	&__sub {
		position absolute
		top 0
		left 100%
		z-index -1
	}
}

.nav-foo {
	&__list {
		padding 0
		margin 0 
		list-style-type none
		columns 2 150px
	}
	
	&__item {
		padding-bottom 15px 
		
		&:last-child {
			padding-bottom 0 
		}
	}
}

.nav-popup {
	font-size 15px 
	
	&__list {
		list-style-type none
		padding 0
		margin 0
		background white
	}
	
	&__item {
		border-bottom 1px solid #d8d8d8
		
		&:hover,
		&.active {
			background #D8D8D8 
		}
		
		&.active {
			border-bottom white 
		}
		
	}
	
	&__link {
		position relative		
		display block
		color #000
		
		&:hover,
		&:focus,
		&:active {
			text-decoration none
			color #000
		}
	}
	
	&__item > &__list {
		display none
		box-shadow  inset 0px 0px 15px 0px rgba(50, 50, 50, 0.5);
	}
	
	&__item.active > &__list {
		display block
	}
}

.nav-breadcrumbs {
	&__list {
		padding 0
		margin 0
		list-style-type none
		font-size 0
	}
	
	&__item {
		display inline
		font-size 13px
		
		&:after {
			content "►"
			margin 0 5px
			color #1195d5 
			font-size 80% 
		}
		
		&:last-child:after {
			content none
		}
	}
	
	&__link {
		color #828282
		
		&:hover,
		&:focus,
		&:active {
			color #828282
		}
	}
}

.nav-pagination {
	&__list {
		list-style-type none
		padding 0
		margin 0
		
		@supports (flex-wrap wrap) {
			display flex
			justify-content center
			flex-wrap wrap
			align-items center
		}
		
		@media (min-width $sm) {
			flex-wrap nowrap
		}
	}
	
	&__item {
		display inline-block
		margin 5px 
		color #323232
		
		@media (min-width $sm) {
			margin 5px 10px
		}
		
		&_prev {
			margin-left 0
			color #bababa
			
			@media (min-width $sm) {
				margin-right auto 
			}
		}
		
		&_next {
			margin-right 0
			color #bababa
			
			@media (min-width $sm) {
				margin-left auto
			}
		}
	}
	
	&__link {
		display flex
		align-items center
		justify-content center
		width 40px 
		height 40px
		border 1px solid #dedede
		text-decoration none
		color inherit
		
		&:hover,
		&:focus,
		&:active,
		&.active {
			text-decoration none
			background-color #78c3e7
			border-color #78c3e7
			color white
		}
	}
}

.nav-tabs {
	position relative
	margin 0
	border-bottom none
	background-color #eaeaea
	
	&__icon {
		position absolute
		bottom -30px
		z-index 5		 
		pointer-events none
		animation 5s infinite horizontal-scroll
	}
	
	&__list {
		padding 0
		margin 0
		list-style-type none
		align-items stretch
	}
		
	&__item {
		display flex
		align-items center
		justify-content center
		border-top 5px solid transparent 
		height auto
		width auto
		
		&.active {
			background white 
			
			@media (min-width $md) {
				border-top 5px solid #00a2ff
			}
		}
	}
	
	&__link {
		display block
		padding 20px 10px
		margin-top -5px
		text-align center
		
		text-decoration none
		color inherit
		
		&:hover,
		&:focus,
		&:active {
			text-decoration none
			color inherit
		}
		
	}
}

