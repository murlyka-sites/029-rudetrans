.button {
	display inline-block
	text-decoration none
	padding 2px 5px
	border none
	font-size 14px
	text-align center
	
	&:hover,
	&:focus,
	&:active {
		text-decoration none
	}
	
	&_size {
		&_sm {
			padding 12px 25px
			line-height 1 
			font-size 24px 
			border-radius 4px
		}
		
		&_md {
			border-radius 3px
			padding 16px 
			font-size 16px 
			line-height 1 
		}
		
		&_lg {
			padding 12px 25px
			font-size 30px 
			line-height 1 
			font-size 30px 
			border-radius 8px
		}
	}
	
	&_available {
		display block
		width 100%
	}
	
	&_theme {
		&_yellow {
			background-color #ffde00
			color #000
			
			&:hover,
			&:focus,
			&:active {
				color #000
				background-color darken(#ffde00, 10%)
			}
		}
		
		&_write-email {
			border 1px solid #4cafdf
			
			&:hover,
			&:focus,
			&:active {
				color white
				background #4cafdf
			}
		}
		
		&_snow {
			background $color-snow  
			border 1px solid #aed7ee
			color #3e3e3e
			
			&:hover,
			&:focus,
			&:active {
				background darken($color-snow, 15%)
				color #3e3e3e
			}
		}
		
		&_white {
			border 1px solid #aed7ee
			background-color #ffffff
			color #3e3e3e
			
			&:hover,
			&:focus,
			&:active {
				background darken($color-snow, 15%)
				color #3e3e3e
			}
		}
		
		&_cloudy {
			border 1px solid $color-cloudy
			background-color $color-cloudy
			color #3e3e3e
			
			&:hover,
			&:focus,
			&:active {
				background darken($color-cloudy, 15%)
				color #3e3e3e
			}
		}
		
		&_gray {
			border 1px solid #cccccc
			background-color #eaeaea
			color #3e3e3e
			
			&:hover,
			&:focus,
			&:active {
				background darken(#eaeaea, 15%)
				color #3e3e3e
			}
		}
	}
}

.slick {
	&-arrow {
		position absolute
		top 50%
		margin-top -21px 
		z-index 5
		border none
		padding 5px
		color #333
		background rgba(76, 175, 223, .55)
		
		&:hover {
			background rgba(76, 175, 223, 1)
		}
	}
	
	&-prev {
		left -15px
	}
	
	&-next {
		right -15px
	}
	
	&-dots {
		list-style-type none
		padding 0
		margin 30px 0 0
		text-align center
		
		li {
			display inline-block
		}
		
		li button {
			position relative
			font-size 0
			line-height 0
			color transparent
			padding 0
			margin 0 3px 
			border 4px solid #6a747b
			border-radius 50%
			width 20px
			height 20px
			
			&:after {
				content ""
				display block
				position absolute
				top -5px
				left -5px
				right -5px
				bottom -5px
				z-index 1
				border-radius 50%
				border 3px solid white
			}
		}
		
		li button:hover,
		li.slick-active button {
			border 4px solid #4cafdf
			
			&:after {
				display none
			}
		}
	}
}

.slider-flex {
