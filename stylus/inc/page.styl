.container-fluid {
	max-width 1200px
	margin auto
}

.bg-smoke-white {
	background $color-smoke-white
}

.bg-white {
	background white
}

.bg-light-gray {
	background $color-light-gray
}

.bg-aluminum {
	background $color-aluminum  
}

.grow {
	&-1-4 {
		flex-grow 1
		width 25% * 1
	}
	
	&-2-4 {
		flex-grow 2
		width 25% * 2
	}
	
	&-3-4 {
		flex-grow 3
		width 25% * 3
	}
	
	&-4-4 {
		flex-grow 4
		width 25% * 4
	}
}